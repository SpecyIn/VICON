            </intent-filter>
        </activity>
        <activity android:name="com.kirg.vicon.StudentListingActivity" />
        <activity android:name="com.kirg.vicon.StudentUpdateDeleteActivity" />
        <activity android:name="com.kirg.vicon.AddStudentActivity" />

